<div class="row">

  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.image}}" style="width: 250px;margin-bottom: 25px;">
  </div>

  <div class="col-md-8">
    <div class="row">
      <div class="col-md-12">
        <h1>{{user.name}}</h1>
      </div>
      <div class="col-md-12">
        <br>
        <p>{{user.email}}</p>
      </div>
      <div class="col-md-12">
        <form action="/users/{{user.id}}/edit" method="get">
          <input type="hidden" name="{{user.id}}">
          <button type="submit" class="btn">EDIT</button>
        </form>
      </div>
    </div>
  </div>

</div>

<hr>
<a href="javascript:history.back()" class="m-auto btn">回上一頁</a>